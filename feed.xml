;            div.className = 'item';            div.addEventListener('click', () => {                window.open(`https://music.163.com/outchain/player?type=2&id=${id}&auto=1`, '_blank');            });            if (/^\d{1,3},\s*\d{1,3},\s*\d{1,3}$/.test(value)) { // 判断是否为 RGB 颜色                div.style.backgroundColor = `rgb(${value})`;                div.style.color = (eval(value.replace(/,/g, '+')) / 3) > 186 ? '#333' : '#fff';                div.innerHTML = `${value}`;                div.setAttribute('data-full-text', `${value}`); // 设置完整文本            } else {                // 生成更多的固定漂亮的颜色，每一个卡片都不同，并根据背景色调整文本颜色                const beautifulColors = ["#FF69B4", "#33CC33", "#66CCCC", "#FFCC00", "#CCFFCC", "#FF99CC", "#0099CC", "#99CC00", "#CC0099", "#0099FF"];                const randomIndex = Math.floor(Math.random() * beautifulColors.length);                div.style.backgroundColor = beautifulColors[randomIndex];                // 根据背景色调整文本颜色                const backgroundColor = beautifulColors[randomIndex];                const textContrast = (parseInt(backgroundColor.slice(-6, -4), 16) * 0.299 + parseInt(backgroundColor.slice(-4, -2), 16) * 0.587 + parseInt(backgroundColor.slice(-2), 16) * 0.114) / 255;                div.style.color = textContrast > 0.5 ? '#000' : '#fff'; // 根据背景色调整文本颜色                div.innerHTML = value.length > 30 ? `${value.substring(0, 30)}...` : value; // 如果文本太长，截断并显示省略号                div.setAttribute('data-full-text', value); // 设置完整文本            }                        container.appendChild(div);        });</script></body></html>]]></content>
    
